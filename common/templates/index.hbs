<!doctype html>
<html>
    <head>
        <!-- LOCALIST COMMENT - START head_tags -->
        {{! FIXME: Localist shoves its own viewport tag in }}
        <meta name="viewport" content="width=device-width">
        <!-- LOCALIST COMMENT - PLACEHOLDER localist_styles -->
        <!-- LOCALIST COMMENT - PLACEHOLDER localist_js -->
        {{! NOTE: Localist injects the <title> tag, so don't add it here }}
        <link rel="shortcut icon" href="{{wrapperHost}}/img/favicon.ico">
        <link rel="apple-touch-icon" sizes="57x57" href="{{wrapperHost}}/img/apple-touch-icon-57x57.png">
        <link rel="apple-touch-icon" sizes="114x114" href="{{wrapperHost}}/img/apple-touch-icon-114x114.png">
        <link rel="apple-touch-icon" sizes="72x72" href="{{wrapperHost}}/img/apple-touch-icon-72x72.png">
        <link rel="apple-touch-icon" sizes="144x144" href="{{wrapperHost}}/img/apple-touch-icon-144x144.png">
        <link rel="apple-touch-icon" sizes="60x60" href="{{wrapperHost}}/img/apple-touch-icon-60x60.png">
        <link rel="apple-touch-icon" sizes="120x120" href="{{wrapperHost}}/img/apple-touch-icon-120x120.png">
        <link rel="apple-touch-icon" sizes="76x76" href="{{wrapperHost}}/img/apple-touch-icon-76x76.png">
        <link rel="apple-touch-icon" sizes="152x152" href="{{wrapperHost}}/img/apple-touch-icon-152x152.png">
        <link rel="icon" type="image/png" href="{{wrapperHost}}/img/favicon-96x96.png" sizes="96x96">
        <link rel="icon" type="image/png" href="{{wrapperHost}}/img/favicon-16x16.png" sizes="16x16">
        <link rel="icon" type="image/png" href="{{wrapperHost}}/img/favicon-32x32.png" sizes="32x32">
        <link rel="stylesheet" type="text/css" href="{{wrapperHost}}/css/style.css">
        <script async type="application/javascript" src="{{wrapperHost}}/js/main.js"></script>
        <!-- LOCALIST COMMENT - END head_tags -->
    </head>
    <body>
        {{! If IE & IE LT 11, show message advising to get real browser }}
        <!-- LOCALIST COMMENT - START body -->
        <header id="main-header">
            {{! Dimensions needed? }}
            <div id="logo-container">
                <a href="{{logo.link}}">
                    <img id="header-logo" title="{{logo.alt}}" alt="{{logo.alt}}" src="{{wrapperHost}}/img/logo.png">
                </a>
            </div>
            <button id="search-button" class="fa fa-search toggle" title="Search" data-target="#search-container"></button>
            <button class="fa fa-bars toggle" title="Menu" id="menu-button" data-target="#main-menu"></button>
            <nav id="menu-container">
                <ul id="search-container"></ul>
                <ul id="main-menu" class="menu">
                    {{! Temporarily disabled at client request }}
                    {{!--
                    <li>
                        <button class="toggle toggle-submenu" data-target="#menu-about">About</button>
                        <ul class="menu submenu" id="menu-about">
                            <li>
                                <a target="_blank" href="//locals.social/about-company">Company</a>
                            </li>
                            <li>
                                <a target="_blank" href="//locals.social/about-team">The Team</a>
                            </li>
                            <li>
                                <a target="_blank" href="//locals.social/contact">Contact</a>
                            </li>
                        </ul>
                    </li>
                    <li><a href="//locals.social/faqs">FAQ's</a></li>
                    --}}
                </ul>
            </nav>
        </header>
        <nav id="localist-menu-container">
            <!-- LOCALIST COMMENT - PLACEHOLDER user_menu -->
        </nav>
        <div id="content-container">
            <nav id="localist-breadcrumb">
                <!-- LOCALIST COMMENT - PLACEHOLDER top_bar -->
            </nav>
            <div id="localist-content">
                <!-- LOCALIST COMMENT - PLACEHOLDER content -->
            </div>
        </div>
        <!-- LOCALIST COMMENT - END body -->
        <!-- LOCALIST COMMENT - START after_grid -->
        <footer id="main-footer">
            <div id="app-info">
                <p>{{brandName}} is available free for iPhone</p>
                <div id="appstore-icons">

                </div>
            </div>
            {{! Temporarily removed at client request }}
            {{!--
            <ul id="footer-links">
                <li>Privacy</li>
                <li>T&amp;Cs</li>
                <li>Subscribe</li>
            </ul>
            --}}
            <p id="powered-by">
                <span>Powered by</span>
                <img alt="locals.social Logo" id="ls-logo" width="128" height="32"
                     src="{{wrapperHost}}/img/locals-social-logo.png">
            </p>
            <div id="social-icons">
                <a id="social-icon-twitter" class="fa fa-twitter social-icon"
                    title="Twitter" href="{{socialLinks.twitter}}"></a>
                <a id="social-icon-facebook" class="fa fa-facebook social-icon"
                    title="Facebook" href="{{socialLinks.facebook}}"></a>
                <a id="social-icon-instagram" class="fa fa-instagram
                    social-icon" title="Instagram" href="{{socialLinks.instagram}}"></a>
                <a id="social-icon-email" class="fa fa-envelope social-icon"
                    title="Email" href="{{socialLinks.email}}"></a>
            </div>
        </footer>
        <!-- LOCALIST COMMENT - END after_grid -->
        {{! Localist strips out script tags in head, so this must go here }}
    </body>
</html>
